.preview-container {
  width: 100%;
  height: 100vh;
  position: relative;
}
.preview-container .popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.preview-container .popup-header .title {
  font-size: 28rpx;
  color: #676767;
}
.preview-container .popup-header .close {
  padding: 8rpx;
}
.preview-container .swiper-container {
  width: 100%;
  height: 100%;
}
.preview-container .swiper-container .swiper-item {
  width: 100%;
  height: 100%;
}
.preview-container .swiper-container .swiper-item .pic {
  width: 100%;
  height: 100%;
}
.preview-container .mask > view {
  position: absolute;
  left: 0;
  right: 0;
  width: -webkit-fit-content;
  width: fit-content;
  margin: auto;
  color: #ffffff;
}
.preview-container .mask .back {
  margin-left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview-container .mask .count {
  top: 10vh;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  -webkit-backdrop-filter: blur(5rpx);
          backdrop-filter: blur(5rpx);
  padding: 8rpx 28rpx;
  font-size: 28rpx;
}
.preview-container .mask .time {
  top: calc(10vh + 80rpx);
  font-size: 140rpx;
  font-weight: 100;
  line-height: 1em;
  text-shadow: 0 4rpx rgba(0, 0, 0, 0.4);
}
.preview-container .mask .date {
  top: calc(10vh + 230rpx);
  font-size: 44rpx;
  text-shadow: 0 4rpx rgba(0, 0, 0, 0.4);
}
.preview-container .mask .footer {
  bottom: 10vh;
  width: 65vw;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.8);
  -webkit-backdrop-filter: blur(20rpx);
          backdrop-filter: blur(20rpx);
  border-radius: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #676767;
}
.preview-container .mask .footer .footer-item {
  display: flex;
  flex-direction: column;
  padding: 2rpx 12rpx;
}
.preview-container .mask .footer .footer-item .text {
  font-size: 28rpx;
}
.preview-container .popup-content {
  width: 100%;
  padding: 15rpx;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
}
.preview-container .popup-content .scorll {
  max-height: 60vh;
}
.preview-container .popup-content .scorll .content {
  padding-bottom: 50rpx;
}
.preview-container .popup-content .scorll .content .row {
  display: flex;
  line-height: 2em;
  padding: 10rpx 0;
}
.preview-container .popup-content .scorll .content .row .label {
  width: 140rpx;
  color: #676767;
  font-size: 28rpx;
  text-align: right;
}
.preview-container .popup-content .scorll .content .row .value {
  flex: 1;
  width: 0;
}
.preview-container .popup-content .scorll .content .row .rate {
  padding-left: 10rpx;
}
.preview-container .popup-content .scorll .content .row .classify {
  color: #28b389;
}
.preview-container .popup-content .scorll .content .row .tags {
  display: flex;
}
.preview-container .popup-content .scorll .content .row .tags .tag {
  border: 1rpx solid #28b389;
  padding: 6rpx 12rpx;
  color: #28b389;
  border-radius: 40rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.preview-container .popup-content .scorll .content .tips {
  background: #eeeeee;
  border-radius: 10rpx;
  padding: 20rpx;
  color: #676767;
  font-size: 26rpx;
}
.preview-container .popupStar {
  width: 70vw;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 30rpx;
}
.preview-container .popupStar .content {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview-container .popupStar .content .text {
  color: #e96900;
  font-size: 26rpx;
  padding-left: 20rpx;
}
.preview-container .popupStar .footer {
  display: flex;
  padding: 10rpx 0;
  justify-content: center;
  align-items: center;
}