.user-layout .user-info {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 50rpx 0;
}
.user-layout .user-info .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-layout .user-info .avatar .pic {
  width: 100%;
  height: 100%;
}
.user-layout .user-info .ip {
  font-size: 44rpx;
  padding: 30rpx 0 5rpx;
}
.user-layout .user-info .addresss {
  font-size: 28rpx;
  color: #aaa;
}
.user-layout .scetion .scetion-list {
  width: 690rpx;
  margin: 50rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.05);
}
.user-layout .scetion .scetion-list .scetion-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #eeeeee;
  background: #ffffff;
  position: relative;
}
.user-layout .scetion .scetion-list .scetion-row:last-child {
  border-bottom: none;
}
.user-layout .scetion .scetion-list .scetion-row button {
  position: absolute;
  left: 0;
  top: 0;
  height: 100rpx;
  width: 100%;
  opacity: 0;
}
.user-layout .scetion .scetion-list .scetion-row .row-lf {
  display: flex;
  align-items: center;
}
.user-layout .scetion .scetion-list .scetion-row .row-lf .row-icon {
  margin-right: 5px;
}
.user-layout .scetion .scetion-list .scetion-row .row-lf .row-icon  .uni-icons {
  color: #28b389 !important;
}
.user-layout .scetion .scetion-list .scetion-row .row-lf .row-text {
  color: #a1a1a1;
}
.user-layout .scetion .scetion-list .scetion-row .row-rg {
  display: flex;
  align-items: center;
}
.user-layout .scetion .scetion-list .scetion-row .row-rg .row-text {
  color: #999999;
}